@using Entity
@model PaginatedList<DocenteE>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="row mt-3">
    
</div>

<div class="row mt-2">
    <div class="card">
        <div class="card-header">
            <label class="fw-bold">Listado de Docentes</label>
        </div>
        <div class="card-body">

            <div class="row mt-3">
                <div class="col-6">
                    <form asp-controller="Docente" asp-action="Index">
                        Buscar Docente
                        <div class="row">
                            <div class="col-9">
                                <input type="text" class="form-control" name="Buscar" />
                            </div>
                            <div class="col-3">
                                <button class="btn btn-success">Buscar</button>
                            </div>

                        </div>
                    </form>
                </div>

                <div class="col-6 text-end">
                    <a asp-action="Create" asp-controller="Docente" class="btn btn-primary">Registrar Docente</a>
                </div>
            </div>
            <table class="table table-bordered table-striped mt-3">
                <thead>
                    <tr>
                        <th class="text-center">Cod. Docente</th>
                        <th class="text-center">Nombre</th>
                        <th class="text-center">Apellido Paterno</th>
                        <th class="text-center">Apellido Materno</</th>
                        <th class="text-center">Nro. Documento</</th>
                        <th class="text-center">Fecha de Nacimiento</</th>
                        <th class="text-center">Direccion</</th>
                        <th class="text-center">Email</</th>
                        <th class="text-center">Celular</</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() > 0)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">@item.IdDocente</td>
                                <td class="text-center">@item.Nombres</td>
                                <td class="text-center">@item.ApellidoPaterno</td>
                                <td class="text-center">@item.ApellidoMaterno</td>
                                <td class="text-center">@item.NroDocumento</td>
                                <td class="text-center">@item.FechaNacimiento</td>
                                <td class="text-center">@item.Direccion</td>
                                <td class="text-center">@item.Email</td>
                                <td class="text-center">@item.Celular</td>
                            </tr>
                        }
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="4">
                            <label class="fw-bold">Total de registros: </label> @Model.Count().ToString()
                        </td>
                    </tr>
                    <tr>
                        <td colspan="4">
                            @{
                                var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                                var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                            }

                            <a asp-action="Index"
                               asp-route-pagenumber="@(Model.PageIndex - 1)"
                               class="btn btn-default @prevDisabled">
                                Previous
                            </a>
                            <a asp-action="Index"
                               asp-route-pagenumber="@(Model.PageIndex + 1)"
                               class="btn btn-default @nextDisabled">
                                Next
                            </a>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
